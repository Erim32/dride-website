{
    "rules": {
        "clips": {
            ".read": true,
            ".indexOn": ["views", "hp"],
            "$uid": {
                ".read": true,
                ".write": "auth!=null",
                "$clipId": {
                    ".indexOn": ["views", "hp"]
                }
            }
        },
        "threads": {
            ".read": true,
            ".write": "auth != null",
            ".indexOn": ["id", "created"]
        },
        "conversations": {
            ".read": true,
            ".write": "auth != null"
        },
        "conversations_video": {
            ".read": true,
            ".write": "auth != null"
        },
        "userData": {
          "$uid": {
            ".read": true,
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        "pushTokens": {
            "$uid": {
                ".read": "auth != null && auth.uid == $uid",
                ".write": "auth != null && auth.uid == $uid"
            }
        }
    }
}
