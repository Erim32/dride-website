{
    "rules": {
        "clips": {
            ".read": true,
            ".indexOn": "views",
            "$uid": {
                ".read": true,
                ".write": "auth!=null",
                "$clipId": {
                    ".indexOn": "views"
                }
            }
        },
        "threads": {
            ".read": true,
            ".write": "auth != null",
            ".indexOn": ["id", "created"]
        },
        "conversations": {
            ".read": true,
            ".write": "auth != null"
        },
        "conversations_video": {
            ".read": true,
            ".write": "auth != null"
        },
        "userData": {
            ".read": true,
            ".write": false
        }
    }
}
